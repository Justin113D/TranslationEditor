<Application 
	xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:scra="using:J113D.Avalonia.Theme"
	xmlns:local="using:J113D.TranslationEditor.ProjectApp"
    x:Class="J113D.TranslationEditor.ProjectApp.App"
    RequestedThemeVariant="Default">

	<Application.Resources>
		<x:Double x:Key="AppFontSize">14</x:Double>
	</Application.Resources>
	
    <Application.Styles>
		<scra:SCRTheme/>

		<Style Selector="Window">
			<Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
		</Style>
    </Application.Styles>
</Application>